# Telco-Vision API Ayarları
TELCO_VISION_API_URL=https://api.telco-vision.co/v1
TELCO_VISION_API_KEY=your_api_key_here
TELCO_VISION_API_SECRET=your_api_secret_here

# Veritabanı Bağlantısı (Turso SQLite Edge Veritabanı)
DATABASE_URL=libsql://your-database-name.turso.io?authToken=your-auth-token
# Yerel geliştirme için alternatif (SQLite yerel dosya)
# DATABASE_URL=file:./dev.db

# NextAuth Ayarları
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secure_nextauth_secret_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Ödeme
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Uygulama Ayarları
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Referans Sistemi Ayarları
REFERRAL_BONUS_AMOUNT=10.00
REFERRAL_CODE_LENGTH=8

# NodeMailer Ayarları (E-posta gönderimi)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_username
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=no-reply@yourdomain.com
